extends ../layout

block content
  .container
    .row
      each item in movies
        .col-md-2
          .thumbnail
            a(href="/movie/#{item._id}")
              img(src="#{item.poster}",alt="#{item.title}",style={height: '250px'})
            .caption
              h5 #{item.title}
              p: a.btn.btn-primary(href="/movie/#{item._id}",role="button") 试试看